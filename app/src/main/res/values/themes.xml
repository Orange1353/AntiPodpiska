<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AntiPodpiska" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
<!--        Фон навигатионменю-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkBack</item>
        <item name="colorSecondaryVariant">@color/darkBack</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="textInputStyle">@style/TextAppearance.App.TextInputLayout</item>
        <item name="colorControlActivated">@color/grey2</item>
        <item name="colorControlHighlight">@color/grey2</item>
        <item name="colorControlNormal">@color/grey2</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/darkBack</item>
    </style>
    <style name="spinner_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/spinner_style</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:popupBackground">#FFFFFF</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>


    <style name="AppThemeForToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:colorBackground">@color/header_back</item>
        <item name="android:textColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeToolbarSearch" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:colorBackground">@color/header_back</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/grey2</item>
        <item name="android:textColorSecondary">@color/grey2</item>
<item name="android:textCursorDrawable">@color/white</item>

    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/grey2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>

    </style>


</resources>