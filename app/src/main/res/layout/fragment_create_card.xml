<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBack"
    tools:context=".addition.CreateNameAndTypeFragment">


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/header_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:background="@drawable/shape_item"

        android:layout_width="320dp"
        android:layout_height="550dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/button_ready"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_success_added"
            android:paddingTop="150dp"
            android:singleLine="false"
            android:textAllCaps="false"
            android:text="Подписка&#10;добавлена"
            android:textSize="25sp"
            android:visibility="invisible">

        </Button>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="33dp"
                android:src="@drawable/ic_add_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="53dp"
                android:text="Данные оплаты"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="36dp"
                android:text="Чтобы вы знали с какой карты будут списаны средства за подписку"
                android:textColor="@color/grey2"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/textView5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/image_card_for_add">

                </ImageView>

                <TextView
                    android:id="@+id/enter_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="50dp"
                    android:text="Введите последние 4 цифры карты"
                    android:textColor="@color/grey2"
                    android:textSize="14sp"
                    android:layout_gravity="bottom|center_horizontal"
 />

                <EditText
                    android:id="@+id/add_card"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:background="@drawable/shape_text_input"
                    android:backgroundTint="@color/darkBack"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="4"

                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="42dp"
                    android:layout_gravity="bottom|left"

                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/stars"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="102dp"
                    android:layout_marginBottom="20dp"
                    android:text="****"
                    android:inputType="textPassword"
                    android:textColor="@color/grey2"
                    android:textSize="14sp"
                    android:layout_gravity="bottom"
                    />
                <TextView
                    android:id="@+id/stars_2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="127dp"
                    android:layout_marginBottom="20dp"
                    android:text="****"
                    android:inputType="textPassword"
                    android:textColor="@color/grey2"
                    android:textSize="14sp"
                    android:layout_gravity="bottom"
                    />
                <TextView
                    android:id="@+id/stars_3"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="152dp"
                    android:layout_marginBottom="20dp"
                    android:text="****"
                    android:inputType="textPassword"
                    android:textColor="@color/grey2"
                    android:textSize="14sp"
                    android:layout_gravity="bottom"
                    />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/frameLayout">

                <TextView
                    android:id="@+id/push_enabled"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="42dp"
                    android:textColor="@color/grey2"
                    android:text="Push" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_enabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Выключены"

                    android:textColor="@color/white" />


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_continue"
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#286BFA"
                android:text="Далее"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>