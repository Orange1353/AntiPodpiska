<?xml version="1.0" encoding="utf-8"?>

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/darkBack">
    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="360dp"
        android:layout_gravity="center"

        android:layout_height="wrap_content">
<LinearLayout
    android:layout_marginTop="120dp"
    android:layout_width="360dp"

    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/dark_light"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="33dp"
        app:srcCompat="@drawable/ic_group" />

    <TextView
        android:id="@+id/create"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="20dp"
        android:text="Редактирование подписки"
        >

    </TextView>



</LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Название подписки"
        android:paddingTop="10dp"

        android:paddingBottom="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_flower_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkBack"
android:textColor="@color/white"
           />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Ссылка на ресурс"
        android:paddingTop="10dp"

        android:paddingBottom="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_flower_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkBack"
            android:inputType="textMultiLine"

            android:textColor="@color/white"

            />

    </com.google.android.material.textfield.TextInputLayout>






    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Введите дату платежа"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
    >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/day_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/darkBack"
            android:focusableInTouchMode="false"
            android:inputType="textMultiLine"
            android:textColor="@color/white" />

    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spinner_type_sub"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="@string/spinner_default_text"
        android:layout_weight="30"
        android:entries="@array/spinner_array_tupe_sub"
        android:textColor="@color/white"
        android:spinnerMode="dialog" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">


        <com.google.android.material.textfield.TextInputLayout

            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Бесплатный период"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_free_days"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:digits="0123456789"
                android:backgroundTint="@color/darkBack"
                android:textColor="@color/white"

                android:maxLength="3" />


        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_free_period_type"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="30"
            android:spinnerMode="dialog"

            android:entries="@array/spinner_array_period"/>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="horizontal">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Введите цену платежа"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_cost"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|number"
            android:digits="0123456789."
            android:backgroundTint="@color/darkBack"
            android:textColor="@color/white"

            android:maxLength="7" />

    </com.google.android.material.textfield.TextInputLayout>

    <Spinner
        android:id="@+id/spinner_curr_cost"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="30"
        android:entries="@array/spinner_array_curr_cost"

        android:spinnerMode="dialog" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Периодичность платежей"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_period"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:digits="0123456789"
            android:backgroundTint="@color/darkBack"
            android:textColor="@color/white"

            android:maxLength="3" />

    </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinner_period_pay"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="30"
            android:entries="@array/spinner_array_period"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Введите последние 4 цифры карты"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="4"
            android:backgroundTint="@color/darkBack"
            android:textColor="@color/white"

            />

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/push_enabled"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:padding="16dp"

            android:text="Push" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_enabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"

            android:text="Выключены" />


    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/done_button"
        android:background="@color/grey2"
        android:layout_width="240dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:cornerRadius="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Добавить" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/dark_light" />

</LinearLayout>
    </ScrollView>


    </FrameLayout>
