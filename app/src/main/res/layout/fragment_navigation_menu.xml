<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBack"
    tools:context=".addition.CreateNameAndTypeFragment">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_menu_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Меню"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingLeft="33dp"
        android:fontFamily="@font/sf_display_regular"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:backgroundTint="@color/header_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:background="@drawable/shape_item"

        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_menu_back">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/button_profile"
                android:layout_width="match_parent"
                android:drawableLeft="@drawable/ic_user_menu"
                android:fontFamily="@font/sf_display_medium"
                android:paddingLeft="33dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/dark_light"
                android:text="Профиль"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/menu_text"
                >

            </Button>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_break" />

            <Button
                android:id="@+id/button_setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="?android:attr/borderlessButtonStyle"
                android:fontFamily="@font/sf_display_medium"
                android:backgroundTint="@color/dark_light"
                android:text="Настройки"
                android:drawableLeft="@drawable/ic_setting_menu"
                android:paddingLeft="30dp"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/menu_text"
                >
            </Button>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_break" />

            <Button
                android:id="@+id/button_support"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="?android:attr/borderlessButtonStyle"
                android:fontFamily="@font/sf_display_medium"
                android:backgroundTint="@color/dark_light"
                android:text="Поддержка"
                android:drawableLeft="@drawable/ic_support_menu"
                android:paddingLeft="27dp"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/menu_text"
                >
            </Button>

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_break" />

            <Button
                android:id="@+id/button_about_app"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sf_display_medium"
                android:backgroundTint="@color/dark_light"
                android:drawableLeft="@drawable/ic_about_app_menu"
                android:paddingLeft="32dp"
                android:text="О приложении"
                android:textAllCaps="false"
                android:textColor="@color/menu_text"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/line_break" />
            <Button

                android:id="@+id/button_logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="?android:attr/borderlessButtonStyle"
                android:fontFamily="@font/sf_display_medium"
                android:backgroundTint="@color/dark_light"
                android:text="Выйти"
                android:drawableLeft="@drawable/ic_log_out"
                android:paddingLeft="34dp"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@color/menu_text"
                >
            </Button>


        </LinearLayout>



    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>